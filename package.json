{
  "name": "opentable-monitor",
  "version": "1.0.0",
  "description": "Automated OpenTable availability monitor with web interface",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development node server.js",
    "cli": "node monitor.js",
    "monitor": "node monitor.js --continuous",
    "test": "node monitor.js --test",
    "docker:build": "docker build -t opentable-monitor .",
    "docker:run": "docker run -p 3001:3001 --env-file .env opentable-monitor"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "puppeteer": "^24.34.0",
    "winston": "^3.11.0"
  },
  "optionalDependencies": {
    "nodemailer": "^6.9.0"
  }
}
